{
  "name": "pln_pskov",
  "version": "1.0.0",
  "match": {
    "domains": ["pln-pskov.ru"],
    "include": ["/", "/society/", "/automir/", "/allworld/", "/dzhkh/", "/tourism/", "/economy/", "/culture/"],
    "exclude": ["/forum/", "/vote_", "/print/", "/search/"]
  },
  "fetch": {
    "headers": {
      "User-Agent": "PaperbirdBot/1.0 (+https://github.com/mysunismine/paperbird)"
    },
    "timeout_sec": 15,
    "rate_limit_rps": 0.2,
    "robots_policy": "respect"
  },

  "list_page": {
    "seeds": ["https://pln-pskov.ru/today/1.html"],
    "selectors": {
      "items": "div.news_list__container a[href$='.html']",
      "url": "@href",
      "title": "@text"
    },
    "pagination": {
      "type": "none"
    }
  },

  "article_page": {
    "selectors": {
      "title": "div.pl__header h1@text",
      "published_at": "div.sdb span.sdb__datetime@text",
      "category": "div.pl__section_name@text",
      "content": "div.pl__text",
      "images": "div.pl__text img@src*",
      "source_name": "div.pl__source__name a@text?",
      "source_url": "div.pl__source__name a@href?"
    },
    "cleanup": {
      "remove": [
        "div.banners_line4",
        "div.pl__social_share",
        "div.pl__interview",
        "div.pl__buttons",
        "div[style='display:none']",
        "script",
        "noscript",
        "style"
      ],
      "unwrap": ["div.pl__text p"]
    },
    "normalize": {
      "html_to_md": true,
      "collapse_whitespace": true,
      "make_absolute_urls": true,
      "strip_tracking_params": true
    },
    "media": {
      "images": {
        "prefix": "https://pln-pskov.ru",
        "min_width": 400
      }
    }
  },

  "normalize": {
    "collapse_whitespace": true,
    "strip_tracking_params": true
  },

  "tests": [
    {
      "url": "https://pln-pskov.ru/society/570861.html",
      "expect": {
        "title_contains": "Прививку от гриппа сделали",
        "content_min_len": 800,
        "images_count_min": 1
      }
    }
  ]
}
