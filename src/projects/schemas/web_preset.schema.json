{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://paperbird.ai/schemas/web_preset.schema.json",
  "title": "Paperbird Web Collector Preset",
  "type": "object",
  "additionalProperties": false,
  "required": ["name", "version", "match", "fetch", "list_page", "article_page"],
  "properties": {
    "name": {
      "type": "string",
      "pattern": "^[a-z0-9_\\-]{3,80}$"
    },
    "version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+(?:[-+][A-Za-z0-9\\.]+)?$"
    },
    "description": {
      "type": "string",
      "maxLength": 500
    },
    "schema_version": {
      "type": "integer",
      "minimum": 1,
      "default": 1
    },
    "match": {
      "type": "object",
      "additionalProperties": false,
      "required": ["domains"],
      "properties": {
        "domains": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^[A-Za-z0-9_.\\-]+$"
          },
          "minItems": 1
        },
        "include": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "exclude": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "fetch": {
      "type": "object",
      "additionalProperties": false,
      "required": ["timeout_sec"],
      "properties": {
        "timeout_sec": {
          "type": "number",
          "minimum": 1,
          "maximum": 120
        },
        "rate_limit_rps": {
          "type": "number",
          "exclusiveMinimum": 0
        },
        "headers": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        },
        "robots_policy": {
          "type": "string",
          "enum": ["respect", "ignore"]
        }
      }
    },
    "render": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false
        },
        "wait_for": {
          "type": "string",
          "maxLength": 200
        },
        "timeout_sec": {
          "type": "number",
          "minimum": 1,
          "maximum": 60
        }
      }
    },
    "list_page": {
      "type": "object",
      "additionalProperties": false,
      "required": ["selectors"],
      "properties": {
        "seeds": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "format": "uri"
          }
        },
        "url_prefix": {
          "type": "string",
          "format": "uri"
        },
        "selectors": {
          "type": "object",
          "additionalProperties": false,
          "required": ["items"],
          "properties": {
            "items": {
              "type": "string"
            },
            "url": {
              "type": "string"
            },
            "title": {
              "type": "string"
            },
            "published_at": {
              "type": "string"
            }
          }
        },
        "pagination": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "type": {
              "type": "string",
              "enum": ["none", "selector", "token"]
            },
            "selector": {
              "type": "string"
            },
            "max_pages": {
              "type": "integer",
              "minimum": 1,
              "maximum": 20
            }
          },
          "required": ["type"]
        }
      }
    },
    "article_page": {
      "type": "object",
      "additionalProperties": false,
      "required": ["selectors"],
      "properties": {
        "selectors": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "title": {
              "type": "string"
            },
            "published_at": {
              "type": "string"
            },
            "content": {
              "type": "string"
            },
            "images": {
              "oneOf": [
                {
                  "type": "string"
                },
                {
                  "type": "array",
                  "items": {
                    "type": "string"
                  },
                  "minItems": 1
                }
              ]
            },
            "canonical_url": {
              "type": "string"
            },
            "source_url": {
              "type": "string"
            },
            "summary": {
              "type": "string"
            },
            "category": {
              "type": "string"
            },
            "author": {
              "type": "string"
            },
            "source_name": {
              "type": "string"
            }
          }
        },
        "cleanup": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "remove": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "unwrap": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        },
        "normalize": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "html_to_md": {
              "type": "boolean"
            },
            "collapse_whitespace": {
              "type": "boolean"
            },
            "make_absolute_urls": {
              "type": "boolean"
            },
            "strip_tracking_params": {
              "type": "boolean"
            }
          }
        },
        "media": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "images": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "prefix": {
                  "type": "string",
                  "format": "uri"
                },
                "min_width": {
                  "type": "integer",
                  "minimum": 1
                }
              }
            }
          }
        }
      }
    },
    "transformers": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "normalize": {
          "type": "object"
        }
      }
    },
    "normalize": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "collapse_whitespace": {
          "type": "boolean"
        },
        "strip_tracking_params": {
          "type": "boolean"
        },
        "make_absolute_urls": {
          "type": "boolean"
        }
      }
    },
    "tests": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["url", "expect"],
        "properties": {
          "url": {
            "type": "string",
            "format": "uri"
          },
          "expect": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "title_contains": {
                "type": "string"
              },
              "content_min_len": {
                "type": "integer",
                "minimum": 1
              },
              "images_count_min": {
                "type": "integer",
                "minimum": 0
              }
            }
          }
        }
      }
    }
  }
}
